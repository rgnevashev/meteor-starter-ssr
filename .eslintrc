{
  "plugins": [
    "meteor",
    "mocha",
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "comma-dangle": [2, "never"],
    "semi": [2, "never"],
    "no-extra-semi": "error",
    "max-len": 0,
    "import/no-extraneous-dependencies": "off",
    "import/no-absolute-path": "off",
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "react/forbid-prop-types": "off"
  },
  "settings": {
    "import/resolver": {
      "meteor": {
        "extensions": [".js",".jsx"]
      }
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "syntax_map": {
      "JavaScript (Babel)": "javascript",
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "meteor": true
  },
  "globals": {
    "Bert": false,
    "Meteor": false,
    "FlowRouter": false
  }
}
